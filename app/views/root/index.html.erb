<%= render "header" %>
<h1>Index page</h1>
<form method="POST" action="/add">
<%= token_tag %>
    <div class="col-6" style="margin: 0 auto;">
        <div class="mb-3">
            <label for="titleid" class="form-label" name="title">Title</label>
            <input type="title" class="form-control" id="titleid" placeholder="Title">
        </div>
        <div class="mb-3">
            <label for="descriptionid" class="form-label">Description</label>
            <textarea name="description" class="form-control" id="descriptionid" rows="3"></textarea>
        </div>
        <div class="mb-3">
        <input type="text" class="btn btn-primary" value="Add" style="display: block; margin: 0 auto;">
        </div>
    </div>
</form>
<%= render "footer" %>